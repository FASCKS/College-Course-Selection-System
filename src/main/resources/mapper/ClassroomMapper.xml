    </sql>
    <resultMap id="findAllClassroomMap" type="com.pxx.collegecourseselectionsystem.dto.ClassroomDto">
        <!--@mbg.generated-->
        <!--@Table classroom-->
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="roof" jdbcType="INTEGER" property="roof"/>
        <result column="floor" jdbcType="INTEGER" property="floor"/>
        <result column="between" jdbcType="INTEGER" property="between"/>
        <result column="roof_type_id" jdbcType="INTEGER" property="roofTypeId"/>
        <result column="between_type_id" jdbcType="INTEGER" property="betweenTypeId"/>
