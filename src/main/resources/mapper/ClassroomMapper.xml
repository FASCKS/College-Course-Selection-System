<mapper namespace="com.pxx.collegecourseselectionsystem.mapper.ClassroomMapper">
    <resultMap id="BaseResultMap" type="com.pxx.collegecourseselectionsystem.entity.Classroom">
        <!--@mbg.generated-->
        <!--@Table classroom-->
        <id column="id" jdbcType="INTEGER" property="id"/>
