        select c.id,
               roof,
               floor,
               `between`,
               roof_type_id,
               between_type_id,
               number,
               cr.name_type    as classroom_roof,
               cb.between_type as classroom_between_name
        from classroom c
                     left join classroom_roof cr on c.roof_type_id = cr.id
                     left join classroom_between cb on cb.id = c.between_type_id
    </select>
