<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pxx.collegecourseselectionsystem.mapper.OrderCourseMapper">
    <resultMap id="BaseResultMap" type="com.pxx.collegecourseselectionsystem.entity.OrderCourse">
        <!--@mbg.generated-->
        <!--@Table order_course-->
        <id column="order_id" jdbcType="INTEGER" property="orderId"/>
        <result column="user_id" jdbcType="BIGINT" property="userId"/>
        <result column="course_id" jdbcType="INTEGER" property="courseId"/>
        <result column="second_course_id" jdbcType="INTEGER" property="secondCourseId"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        order_id, user_id, course_id, second_course_id
    </sql>

    <delete id="deleteAll">
        delete
        from order_course
        where 1 = 1
    </delete>

    <select id="findAllByPlanGroupId" resultType="com.pxx.collegecourseselectionsystem.dto.SecondCourseDto">
        select sc.id, sc.course_id, sc.teacher, sc.course_sum, sc.up_time, sc.up_time_two, sc.week, sc.state, sc.plan_group_id , oc.user_id,su.unit_id
        from order_course oc
                     left join second_course sc on oc.second_course_id = sc.id
                        left join  sys_user su on oc.user_id=su.user_id
        where oc.plan_group_id = #{planGroupId,jdbcType=INTEGER}
    </select>
</mapper>